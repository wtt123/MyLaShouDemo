<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:background="@drawable/selector_item_home_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="340px"
        android:padding="20px">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/list_image"
            android:layout_width="350px"
            android:layout_height="300px"
            android:layout_marginLeft="15px"
            android:padding="10px"
            fresco:placeholderImage="@drawable/default_list_pic"
            fresco:roundedCornerRadius="15px"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/list_image"
            android:layout_marginLeft="30px"
            android:layout_marginTop="30px"
            android:layout_toRightOf="@+id/list_image"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/blank"
            android:textSize="42px"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/list_image"
            android:singleLine="true"
            android:text="TextView"
            android:textSize="36px"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/list_image"
            android:layout_marginBottom="15px"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/list_image"
            android:text="¥"
            android:textColor="@color/colorPrimaryDark"
            android:paddingBottom="2px"
            android:textSize="42px"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/list_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView3"
            android:layout_marginLeft="5px"
            android:layout_toEndOf="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:text="89"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="50px"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/list_yishou"
            android:layout_marginRight="25px"
            android:layout_toLeftOf="@+id/list_yishou"
            android:text="已售"
            android:textSize="36px"/>
        <TextView
            android:id="@+id/list_yishou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/list_money"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:text="22"
            android:textSize="36px"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_alignParentLeft="true"
            android:background="@drawable/appointment_img"/>

    </RelativeLayout>
    <include layout="@layout/view_line"/>
</LinearLayout>